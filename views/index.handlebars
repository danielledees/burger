<h1>Eat Da Burger!</h1>


<h2>Ready to Eat</h2>

<ul>
 {{#each burgers}}
      {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
      {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
      {{/if}}
  {{/each}}
</ul>




<h2 class="card-header text-center">Enter a burger you want to eat and click the submit button</h2>
  
  <form class="create-form">
    <div class="form-group">
        <label for="ham">Burger Name:</label>
        <input type="text" id="ham" name="name">
    </div>
      <button type="submit" class="btn btn-outline-secondary rounded-0">Submit</button>
  </form>

        
