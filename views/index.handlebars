<h1>Eat Da Burger!</h1>

<h2>Enter a burger you want to eat and click the submit button</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Submit</button>
</form>


<h2>Burgers not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li class="burger">{{burger_name}}</li> 
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
       <li class="burger"> {{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

